<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:background="@color/popup_grey"
    android:gravity="center">

    <TextView
        android:id="@+id/textprompt_popup_connecttowhich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/cardview_light_background"
        android:text="please select which type of device\nyou would like to connect this as:"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/button_popup_connect_helmet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_popup_connect_helmet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_small_noun_helmet_2258845"
        android:text="helmet"
        app:layout_constraintBottom_toTopOf="@id/button_popup_connect_cancel"
        app:layout_constraintEnd_toStartOf="@id/button_popup_connect_bike"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textprompt_popup_connecttowhich" />

    <Button
        android:id="@+id/button_popup_connect_bike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_small_noun_motorcycle_2713773"
        android:text="bike"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_popup_connect_helmet"
        app:layout_constraintTop_toTopOf="@id/button_popup_connect_helmet" />


    <Button
        android:id="@+id/button_popup_connect_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_popup_connect_helmet" />

</androidx.constraintlayout.widget.ConstraintLayout>